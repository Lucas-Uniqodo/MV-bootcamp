<section>
	<div class="row justify-content-center align-content-center">
		<h1>Restaurants</h1>
		<a href="/restaurants/form" class="btn btn-primary">Add Restaurant</a>

		{{#each restaurants}}
		{{!-- filter by rating, google if statement in handlebars --}}
			<div class="card col-xl-3 col-lg-4 col-md-5" style="margin: 20px">
				<img src="{{this.imageLink}}" alt="image of {{this.name}}" />
				<div class="card-body">
					<h5 class="card-title">{{this.name}}</h5>
					<a
						href="/restaurants/{{this.id}}/menus"
						class="btn btn-primary"
					>View Menus</a>
					<a
						href="/restaurants/{{this.id}}/delete"
						class="btn btn-primary"
					>Delete Restaurant</a>
					<a
						href="/restaurants/{{this.id}}/updateform"
						class="btn btn-primary"
					>update Restaurant</a>
				</div>
			</div>
		{{/each}}
	</div>
</section>